<?xml version="1.0"?>
<ruleset name="Androlax">
    <description>Androlax Coding Standards</description>

    <!-- Scan all files in directory -->
    <file>./src/</file>
    <file>./acf-image-map.php</file>

    <!-- Scan only PHP files -->
    <arg name="extensions" value="php"/>

    <!-- Show colors in console -->
    <arg value="-colors"/>

    <!-- Show sniff codes in all reports -->
    <arg value="ns"/>

    <!-- Use PSR-12 as a base -->
    <rule ref="PSR12"/>
</ruleset>
